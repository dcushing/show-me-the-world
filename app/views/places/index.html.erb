<% provide :title, t('.where-next') %>

<div class="row text-center" id="landing">
	<div class="col-xs-12">
		<h1><%= @place.city %>, <%= @place.country %></h1>
	</div>
</div>

<h4>Lat: <%= @place.lat %>, lon: <%= @place.lng %>, pop: <%= @place.pop %></h4>

<div class="row center" id="pics">
	<div class="col-xs-4 text-center">
		<img class="img-responsive" src="https://www.massinsight.org/wp-content/uploads/2016/05/placeholder-4-500x300.png" />
		<p>Image credit {USER} on Flickr</p>
	</div>
	<div class="col-xs-4 text-center">		
		<img class="img-responsive" src="https://www.massinsight.org/wp-content/uploads/2016/05/placeholder-4-500x300.png" />
		<p>Image credit {USER} on Flickr</p>
	</div>
	<div class="col-xs-4 text-center">
		<img class="img-responsive" src="https://www.massinsight.org/wp-content/uploads/2016/05/placeholder-4-500x300.png" />
		<p>Image credit {USER} on Flickr</p>
	</div>
</div>

<div class="row" id="buttons">
	<div class="col-md-6 text-center">
		<%= link_to "Tell me more", info_path, remote: true, class: 'btn btn-lg' %>
	</div>
	<div class="col-md-6 text-center">
		<%= link_to "Nah, show me something else", root_path, class: 'btn btn-lg' %>
	</div>
</div>

<div id="trip-info"></div>
